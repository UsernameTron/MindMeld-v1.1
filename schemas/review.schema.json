{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Code Review Analysis Result",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "message": { "type": "string" },
    "severity": { "type": "string", "enum": ["info", "warning", "error"] },
    "category": { "type": "string", "enum": ["style", "bug", "performance", "security", "best-practice", "other"] },
    "line": { "type": "integer" },
    "suggestion": { "type": "string" },
    "details": { "type": "string" }
  },
  "required": ["id", "message", "severity", "category"],
  "additionalProperties": false
}
