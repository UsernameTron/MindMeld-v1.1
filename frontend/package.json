{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint src",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run --config=vitest.config.mts",
    "test:watch": "vitest watch --config=vitest.config.mts",
    "test:coverage": "vitest run --coverage",
    "test:ci-config": "vitest run frontend/tests/ci/ciConfig.test.ts",
    "build": "next build",
    "dev": "next dev",
    "test:frontend": "vitest --config vitest.config.mts run",
    "fetch-schema": "ts-node src/api/schema/fetch-schema.ts",
    "generate-types": "ts-node src/api/schema/generate-types.ts",
    "storybook": "start-storybook -p 6006",
    "analyze-bundle": "vite build",
    "lhci:autorun": "lhci autorun"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-query": "^5.75.7",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.9.0",
    "cookie": "^1.0.2",
    "jwt-decode": "^4.0.0",
    "next": "13.5.4",
    "react-router-dom": "^7.6.0",
    "swagger-client": "^3.35.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.46",
    "@types/react": "^18.3.21",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-v8": "^3.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.2",
    "openapi-typescript": "^7.7.1",
    "prettier": "^3.5.3",
    "prop-types": "^15.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
