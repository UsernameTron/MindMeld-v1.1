{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ext .ts,.tsx --max-warnings 0 --rule=\"@typescript-eslint/no-explicit-any: off\" --rule=\"@typescript-eslint/no-unused-vars: off\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run --config=vitest.config.mts",
    "test:watch": "vitest watch --config=vitest.config.mts",
    "test:coverage": "vitest run --coverage",
    "test:ci-config": "vitest run frontend/tests/ci/ciConfig.test.ts",
    "build": "next build",
    "dev": "next dev",
    "test:frontend": "vitest --config vitest.config.mts run"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-query": "^5.75.5",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.9.0",
    "cookie": "^1.0.2",
    "jwt-decode": "^4.0.0",
    "next": "15.3.2",
    "react-router-dom": "^7.6.0",
    "swagger-client": "^3.35.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-v8": "^3.1.3",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.2",
    "openapi-typescript": "^7.7.1",
    "prettier": "^3.5.3",
    "prop-types": "^15.8.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  }
}
